<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#BDBDBD</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorAccent">#01579B</item>
    </style>

    <style name="AppThemePrincipal" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0277BD</item>
        <item name="colorPrimaryDark">#01579B</item>
        <item name="colorAccent">#01579B</item>
    </style>
    <style name="AppThemeFullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeFullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
