<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufrn.ect.lop.lopalpha.FazerQuestaoFragment">


    <TextView
        android:id="@+id/tituloEnunciado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14sp" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <br.ufrn.ect.lop.lopalpha.MyEditText
            android:id="@+id/codeIDE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121"
            android:ems="10"
            android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
            android:paddingBottom="150dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/submeter"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/executar"
            android:layout_alignBottom="@+id/executar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#3f51b5"
            android:text="Submeter"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/executar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#3f51b5"
            android:text="Executar"
            android:textColor="#ffffff" />

    </RelativeLayout>


</LinearLayout>
